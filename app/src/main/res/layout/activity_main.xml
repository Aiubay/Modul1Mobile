<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ubay.achmadirjikubay_1202154184_modul1.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="@string/judul1"
        android:textSize="36sp"
        />
    <TextView
        android:id="@+id/tempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/judul2"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nasi Uduk"
        />

    <EditText
        android:id="@+id/jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/menu"
        android:layout_below="@+id/menu"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="2"
        android:inputType="number" />

    <Button
        android:id="@+id/makan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/jumlah"
        android:layout_below="@+id/jumlah"
        android:layout_marginTop="38dp"
        android:onClick="pilihmakan"
        android:text="@string/pilihan1" />

    <Button
        android:id="@+id/notnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/makan"
        android:layout_alignBottom="@+id/makan"
        android:layout_alignEnd="@+id/jumlah"
        android:layout_marginEnd="13dp"
        android:text="@string/pilihan2"
        android:onClick="notnormal" />

</RelativeLayout>
